<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="360.0dip"
    android:background="@color/bg_blue"
    android:orientation="vertical">

    <TextView
        android:id="@id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13.0dip"
        android:layout_marginTop="27.0dip"
        android:gravity="center"
        android:text="内容"
        android:textColor="@color/white"
        android:textSize="18.0sp" />


    <TextView
        android:id="@+id/desc"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:maxWidth="210.0dip"
        android:text="1. 全新正文详情页布局\n2. 优化列表页阅读体验\n3. 修复安卓6.0上适配问题"
        android:textColor="@color/white"
        android:textSize="16.0sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="66.0dip"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@null"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@null"
            android:clickable="true"
            android:gravity="center"
            android:padding="23.0dip"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="17.0sp" />

        <View
            android:layout_width="1.0dip"
            android:layout_height="16.0dip"
            android:layout_gravity="center"
            android:background="@color/white" />

        <TextView
            android:id="@+id/btnOK"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@null"
            android:clickable="true"
            android:gravity="center"
            android:padding="23.0dip"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="17.0sp" />
    </LinearLayout>
</LinearLayout>