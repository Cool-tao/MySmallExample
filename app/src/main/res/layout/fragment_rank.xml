<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/colorPrimary"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ssxinmian3"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Rank"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="获取语言、国家"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:hint="测试点击屏幕外输入法消失" />

            <TextView
                android:id="@+id/test_is_task_root_tv"
                style="@style/txt_titleStyle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_enable_green"
                android:padding="5dp"
                android:text="测试isTaskRoot" />


            <TextView
                android:id="@+id/test_jar_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/click_white_gray"
                android:padding="15dp"
                android:text="Jar测试与Xml解析"
                android:textColor="@color/ssxinzi2"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/test_get_market"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/click_white_gray"
                android:padding="15dp"
                android:text="跳转市场"
                android:textColor="@color/ssxinzi2"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/test_draft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/click_white_gray"
                android:padding="15dp"
                android:text="DraftTestActivity"
                android:textColor="@color/ssxinzi2"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/test_taost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/click_white_gray"
                android:padding="15dp"
                android:text="不同Toast"
                android:textColor="@color/ssxinzi2"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/test_listview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/click_white_gray"
                android:padding="15dp"
                android:text="ListView"
                android:textColor="@color/ssxinzi2"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/test_net"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/click_white_gray"
                android:padding="15dp"
                android:text="省流量模式"
                android:textColor="@color/ssxinzi2"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>