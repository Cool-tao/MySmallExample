<resources>

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <item name="windowActionBar">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!--<item name="android:windowBackground">@color/transparent</item>-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="line_v">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dip</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="main_tab_item2">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/textSize5</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/main_menu_text</item>
        <item name="android:background">@null</item>
    </style>

    <style name="rank_tab_item">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/rank_menu_text</item>
        <item name="android:background">@null</item>
    </style>

    <style name="txt_titleStyle1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="profile_friend_adapter_reason">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ff707070</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">false</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="profile_header_blue_text">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/profile_header_text_blue</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="profile_header_black_text">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/profile_header_text_black</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="NotificationDate">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="NotificationTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="NotificationText">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>
</resources>
